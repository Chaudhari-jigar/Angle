@model IEnumerable<PalWeb.Models.ApplicationUser>

@{
	ViewBag.Title = "Index";
}

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5><i class="fa fa-slideshare"></i> Manage User</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Add User", "Create", null, new { @class = "btn btn-primary btn-xs" })
					</div>
				</div>
				<div class="ibox-content">
					<table class="table table-striped table-bordered table-hover dataTables-User">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.UserName)
								</th>
								<th>
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.UserName)
									</td>
									<td>
										@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-xs" })
										@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
										@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
